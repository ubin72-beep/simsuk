  <!-- 메인 페이지 -->
  <url>
    <loc>https://www.simsuk.com/</loc>
    <lastmod>2026-02-20</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- 404 페이지 -->
  <url>
    <loc>https://www.simsuk.com/404.html</loc>
    <lastmod>2026-02-20</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.3</priority>
  </url>
  
  <!-- 관리자 페이지는 제외 (검색엔진에 노출하지 않음) -->
  <!-- admin.html은 포함하지 않음 -->
</urlset>
